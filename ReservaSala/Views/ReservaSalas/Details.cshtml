@model ReservaSala.Models.ReservaSala

@{
    ViewBag.Title = "Detalhes da reserva";
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <p>
                <div>
                    <h2>@ViewBag.Title</h2>
                </div>
            </p>
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">Fechar</span></button>
            <h4 id="modalTitle" class="modal-title"></h4>
        </div>
        <div id="modalBody" class="modal-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <h6>Motivo da reserva:</h6>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(model => model.titulo, new { cols = 10, @rows = 2, @maxlenght = 250, @class = "form-control border semAjuste text-center col-lg-12", @disabled = "disabled" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <h6>@Html.DisplayNameFor(model => model.reservaDia)</h6>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(model => model.reservaDia, "{0:dd/MM/yyyy}", new { cols = 10, @rows = 2, @maxlenght = 250, @class = "form-control border semAjuste text-center", @disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <h6>@Html.DisplayNameFor(model => model.reservaHoraIni)</h6>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(model => model.reservaHoraIni, "{0:hh\\:mm}", new { cols = 10, @rows = 2, @maxlenght = 250, @class = "form-control border semAjuste text-center", @disabled = "disabled" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <h6>@Html.DisplayNameFor(model => model.reservaHoraFim)</h6>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(model => model.reservaHoraFim, "{0:hh\\:mm}",  new { cols = 10, @rows = 2, @maxlenght = 250, @class = "form-control border semAjuste text-center", @disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <h6>Reservado por: </h6>
                    <div class="col-lg-12">
                        @Html.TextAreaFor(model => model.UsuarioSala.nomeUsuario, new { cols = 10, @rows = 2, @maxlenght = 250, @class = "form-control border semAjuste text-center", @disabled = "disabled" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.UsuarioSala.idUsuSala, new { id = "usuario" })
            </div>

            <div class="modal-footer col-12">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8" id="editar">
                        <a class="btn btn-success" title="Editar" id="editar" href="@Url.Action("Edit","ReservaSalas", new { id = Model.idResSala})">
                            <i class="far fa-edit"></i> Editar
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-2 col-md-8" id="deletar">
                        <a class="btn btn-danger" title="Deletar" href="@Url.Action("Delete","ReservaSalas", new { id = Model.idResSala})">
                            <i class="fas fa-trash-alt"></i> Deletar
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-offset-2 col-md-8" id="deletar">
                        <button type="button" class="btn btn-primary" title="Fechar" data-dismiss="modal"><i class="fas fa-times"></i>  Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            var userAtual = $("#usuario").val();
            var user = @Session["UserID"];
            var editar = $("#editar");
            var deletar = $("#deletar");

            if (user != userAtual) {
                document.getElementById("editar").style.display = "none";
                editar.removeAttr("style").hide();
                deletar.removeAttr("style").hide();
            }

            var dia = $("#reservaDia");
        });
</script>
